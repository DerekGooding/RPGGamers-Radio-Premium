<ui:FluentWindow x:Class="GamerRadio.ViewModel.Windows.InputTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamerRadio.ViewModel.Windows"
        
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        mc:Ignorable="d"
        Title="InputTextWindow" Height="200" Width="400">
    <DockPanel>
        <TextBlock Text="Input API Key from Tuber" DockPanel.Dock="Top" Margin="10"/>
        <TextBox x:Name="APIField" DockPanel.Dock="Top" Margin="10"/>

        <ui:Button Content="Accept" Appearance="Primary" DockPanel.Dock="Bottom" Margin="10" Click="OnOkClicked"/>
        <Grid/>
    </DockPanel>
</ui:FluentWindow>
